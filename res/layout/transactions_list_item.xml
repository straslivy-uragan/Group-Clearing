<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="right"
    android:padding="10dp" >

    <TextView
        android:id="@+id/transactionsListItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:color="@android:color/primary_text_dark" >
    </TextView>

    <TextView
        android:id="@+id/transactionsListItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/transactionsListItemName"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="14sp"
        android:textStyle="italic" >
    </TextView>

    <TextView
        android:id="@+id/transactionsListItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_below="@id/transactionsListItemName"
        android:layout_toRightOf="@id/transactionsListItemDate"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="14sp"
        android:textStyle="italic" >
    </TextView>

</RelativeLayout>